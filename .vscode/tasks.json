{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/std:c++17", // 设置 C++17 标准
                "/Zi",
                "/EHsc",
                "/nologo",
                "/I${workspaceFolder}\\includes",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}",
                "${workspaceFolder}\\libs\\**.c",
                "${workspaceFolder}\\core\\**.cpp",
                "gdi32.lib",
                "Shell32.lib",
                "user32.lib",
                "kernel32.lib",
                "opengl32.lib",
                "${workspaceFolder}\\libs\\glfw3.lib",
                "/MD"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
        }
    ],
    "version": "2.0.0"
}